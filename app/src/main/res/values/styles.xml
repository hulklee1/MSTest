<resources>
    <style name="Theme.EdgeAIApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/purple_700</item>
        
        <!-- 기본 텍스트 색상 설정 -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- 기본 텍스트 스타일 -->
    <style name="TextAppearance.EdgeAIApp.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextAppearance.EdgeAIApp.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TextAppearance.EdgeAIApp.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <!-- 팝업메뉴 스타일 - 흰색 배경 -->
    <style name="WhitePopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:background">@color/white</item>
    </style>
    
    <!-- 팝업메뉴 아이템 스타일 -->
    <style name="WhitePopupMenuItem" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@color/white</item>
        <item name="android:listSelector">@color/light_gray</item>
    </style>
    
    <!-- 팝업메뉴 오버레이 스타일 -->
    <style name="WhitePopupMenuOverlay" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:dropDownListViewStyle">@style/WhitePopupMenuItem</item>
    </style>
    
    <!-- 개선된 다이얼로그 스타일 -->
    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:textColorPrimary">@color/dialog_text_dark</item>
        <item name="android:textColor">@color/dialog_text_dark</item>
        <item name="colorPrimary">@color/button_blue_primary</item>
        <item name="colorAccent">@color/button_blue_primary</item>
        <item name="android:buttonBarButtonStyle">@style/CustomDialogButton</item>
    </style>
    
    <!-- 다이얼로그 버튼 스타일 -->
    <style name="CustomDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/button_blue_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- 파란색 버튼 스타일 -->
    <style name="BlueButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_blue_background</item>
        <item name="android:textColor">@color/button_text_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:elevation">4dp</item>
    </style>
    
    <!-- 긍정 버튼 스타일 -->
    <style name="PositiveButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_positive_background</item>
        <item name="android:textColor">@color/button_text_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- 부정 버튼 스타일 -->
    <style name="NegativeButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/button_negative</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources> 
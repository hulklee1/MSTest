<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.edgeaiapp">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:label="EdgeAIApp"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EdgeAIApp"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">
        
        <activity android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <activity android:name=".MainActivity"/>
        <activity android:name=".CameraActivity"/>
        <activity android:name=".GalleryActivity"/>
        <activity android:name=".AnalyzeActivity"/>
        <activity android:name=".ScanningActivity"/>
        <activity android:name=".ImageSelectionActivity"/>
        <activity android:name=".ImageViewerActivity"/>
        <activity android:name=".ResultActivity"/>
        <activity android:name=".EditResultActivity"/>
        <activity android:name=".ProductSelectionActivity"/>
        <activity android:name=".SettingsActivity"/>
        
    </application>
</manifest> 